<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.DecadeOfMovies" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/shark</item>
        <item name="colorPrimaryDark">@color/shark</item>
        <item name="colorAccent">@color/alpha_aa_white</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/shark</item>
    </style>

    <style name="Theme.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
    </style>

    <style name="MarginDefault">
        <item name="android:layout_marginTop">@dimen/large_margin</item>
        <item name="android:layout_marginEnd">@dimen/large_margin</item>
        <item name="android:layout_marginStart">@dimen/large_margin</item>
    </style>

    <style name="HeaderTextStyle" parent="MarginDefault">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/very_large_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubHeaderTextStyle" parent="MarginDefault">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ParagraphTextStyle" parent="MarginDefault">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="EditTextStyle" parent="MarginDefault">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/dim_grey</item>
        <item name="android:textColorHint">@color/dim_grey</item>
        <item name="backgroundTint">@color/dim_grey</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RoundedMoviePoster">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">3%</item>
    </style>

</resources>